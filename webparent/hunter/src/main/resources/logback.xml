<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<property name="ABSOLUTE_PATH" 
		value="d:/data/logs/avx/hunter" />

	<appender name="console" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>
				%date{HH:mm:ss.SSS} [%thread] %-5level %logger - %msg%n
			</pattern>
		</encoder>
	</appender>

	<appender name="applicationAppender"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>
				${ABSOLUTE_PATH}/%d{yyyy-MM-dd,aux}/application-%d{yyyy-MM-dd-HH}.log
			</fileNamePattern>
			<maxHistory>720</maxHistory>
		</rollingPolicy>

		<encoder>
			<pattern>
				%date{HH:mm:ss.SSS} [%thread] %-5level %logger - %msg%n
			</pattern>
		</encoder>
	</appender>

	<logger name="com.hwf.avx" level="INFO" additivity="false">
		<appender-ref ref="applicationAppender" />
		<appender-ref ref="console" />
	</logger>
	<root level="INFO">
		<appender-ref ref="console" />
	</root>
</configuration>